/**
 * @file
 * @brief		PC bootloader linker script.
 */

#include <arch/page.h>
#include <platform/loader.h>

OUTPUT_FORMAT("elf32-i386")
OUTPUT_ARCH("i386")

SECTIONS {
	. = LOADER_LOAD_ADDR;
	__start = .;

	.text : {
		__text_start = .;
		*(.init.text)
		*(.text)
		*(.text.*)
		__text_end = .;
	}

	.rodata ALIGN(32) : {
		__rodata_start = .;
		*(.rodata)
		*(.rodata.*)
		__rodata_end = .;
	}

	.data ALIGN(32) : {
		__data_start = .;
		*(.data)
		*(.data.*)

		__commands_start = .;
		*(.commands)
		__commands_end = .;

		__data_end = .;
	}

	.bss ALIGN(32) : {
		__bss_start = .;
		*(.bss)
		*(.bss.*)
		*(COMMON)
		__bss_end = .;
	}

	. = ALIGN(PAGE_SIZE);
	__end = .;

	/DISCARD/ : {
		*(.note.GNU-stack)
		*(.comment*)
	}
}
