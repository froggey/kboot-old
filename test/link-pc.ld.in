/**
 * @file
 * @brief		x86 test kernel linker script.
 */

#include <arch/page.h>

ENTRY(kmain)
OUTPUT_ARCH("i386")
OUTPUT_FORMAT("elf32-i386")

SECTIONS {
	. = 0xC0000000 + SIZEOF_HEADERS;

	.text : {
		__text_start = .;
		*(.text)
		*(.text.*)
		. = ALIGN(PAGE_SIZE);
		__text_end = .;
	}

	.rodata ALIGN(PAGE_SIZE) : {
		__rodata_start = .;
		*(.rodata)
		*(.rodata.*)
		. = ALIGN(PAGE_SIZE);
		__rodata_end = .;
	}

	.data ALIGN(PAGE_SIZE) : {
		__data_start = .;
		*(.data)
		*(.data.*)
		. = ALIGN(PAGE_SIZE);
		__data_end = .;
	}

	.bss ALIGN(PAGE_SIZE) : {
		__bss_start = .;
		*(.bss)
		*(.bss.*)
		*(COMMON)
		. = ALIGN(PAGE_SIZE);
		__bss_end = .;
	}

	__end = .;

	/DISCARD/ : {
		*(.note.GNU-stack)
		*(.comment*)
	}
}
